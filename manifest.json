{
  "manifest_version": 3,
  "name": "WebGPT Analyzer",
  "version": "1.0",
  "description": "Analyzes the web requests and sources used in a ChatGPT conversation.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_title": "Analyze WebGPT"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "host_permissions": [
    "https://chatgpt.com/*"
  ]
}